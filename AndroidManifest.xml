<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.greengin.sciencetoolkit"
    android:versionCode="11"
    android:versionName="0.131101C" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:name="org.greengin.sciencetoolkit.ScienceToolkitApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.greengin.sciencetoolkit.ui.components.WelcomeActivity"
            android:label="@string/title_activity_welcome" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.greengin.sciencetoolkit.ui.components.main.MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName="org.greengin.sciencetoolkit.ui.components.WelcomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.greengin.sciencetoolkit.ui.components.WelcomeActivity" />
        </activity>
        <activity
            android:name="org.greengin.sciencetoolkit.ui.components.main.sensorlist.SensorListSettingsActivity"
            android:label="@string/title_activity_sensor_list_settings"
            android:parentActivityName="org.greengin.sciencetoolkit.ui.components.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.greengin.sciencetoolkit.ui.components.main.MainActivity" />
        </activity>
        <activity
            android:name="org.greengin.sciencetoolkit.ui.components.main.sensorlist.SensorSettingsActivity"
            android:label="@string/title_activity_sensor_settings"
            android:parentActivityName="org.greengin.sciencetoolkit.ui.components.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.greengin.sciencetoolkit.ui.components.main.MainActivity" />
        </activity>
        <activity
            android:name="org.greengin.sciencetoolkit.ui.components.main.datalogging.DataLoggingEditActivity"
            android:label="@string/title_activity_data_logging_edit"
            android:parentActivityName="org.greengin.sciencetoolkit.ui.components.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.greengin.sciencetoolkit.ui.components.main.MainActivity" />
        </activity>
        <activity
            android:name="org.greengin.sciencetoolkit.ui.components.main.datalogging.ProfileSensorSettingsActivity"
            android:label="@string/title_activity_data_logging_edit"
            android:parentActivityName="org.greengin.sciencetoolkit.ui.components.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.greengin.sciencetoolkit.ui.components.main.MainActivity" />
        </activity>
        </application>

</manifest>
