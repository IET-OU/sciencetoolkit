<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.greengin.sciencetoolkit"
    android:versionCode="5"
    android:versionName="0.131023" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:name="org.greengin.sciencetoolkit.ScienceToolkitApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.greengin.sciencetoolkit.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.greengin.sciencetoolkit.activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:parentActivityName="org.greengin.sciencetoolkit.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.greengin.sciencetoolkit.activities.MainActivity" />
        </activity>
        <activity
            android:name="org.greengin.sciencetoolkit.activities.SensorDetailActivity"
            android:label="@string/title_activity_sensor_detail"
            android:parentActivityName="org.greengin.sciencetoolkit.activitiesHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.greengin.sciencetoolkit.activities.HomeActivity" />
        </activity>
        
        <service
            android:name=".MonitorsService"
            android:exported="false"/>
    </application>

</manifest>